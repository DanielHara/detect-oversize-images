{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_icon": "hello_extensions.png",
      "default_title": "Click to show an alert"
    },
    "background": {
      "service_worker": "background.js"
    },
    "externally_connectable": {
      "matches": ["http://localhost:3000/*"]
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "https://*/*"
    ]
}
